//compilation of all the TS-source. For an internal use only.
//to compile only the distributed TS, compile the other json
{
  "compilerOptions": {
    "target": "es5",
    "removeComments": false,
    "sourceMap": true,
    "out": "JS/MATHIS.js",
    "declaration":false,
    "diagnostics":false,
    "watch":true
  },
  "exclude": [
    "**/MATHIS.d.ts",
    "small_projects/**/JS/"
  ]
}



