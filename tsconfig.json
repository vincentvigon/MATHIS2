//compilation of all the TS-source. For an internal use only.
//to compile only the distributed TS, compile the other json
{
  "compilerOptions": {
    "module": "none",
    "target": "es5",
    "removeComments": false,
    "sourceMap": true,
    "out": "JS/MATHIS.js",
    "declaration":false,
    "diagnostics":false
  },
  "exclude": [
    "**/MATHIS.d.ts",
    "TS/_fakeBABYLON.ts"
  ]
}



